{
  "name": "sanity-training",
  "description": "Next.js + Sanity workspace providing a frontend and Sanity Studio for content-managed sites.",
  "keywords": [
    "sanity",
    "nextjs",
    "headless-cms",
    "visual-editing",
    "content"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel --print-label dev:*",
    "dev:next": "pnpm --filter frontend dev",
    "dev:studio": "pnpm --filter studio dev",
    "format": "prettier --cache --write .",
    "lint": "pnpm --filter frontend lint",
    "type-check": "pnpm --filter-workspaces type-check"
  },
  "prettier": "@sanity/prettier-config",
  "devDependencies": {
    "@sanity/prettier-config": "^2.0.1",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2"
  }
}