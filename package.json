{
  "name": "sanity-training",
  "description": "Next.js + Sanity workspace providing a frontend and Sanity Studio for content-managed sites.",
  "keywords": [
    "sanity",
    "nextjs",
    "headless-cms",
    "visual-editing",
    "content"
  ],
  
  "workspaces": [
    "studio",
    "frontend"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel --print-label dev:*",
    "dev:next": "npm run dev --workspace=frontend",
    "dev:studio": "npm run dev --workspace=studio",
    "format": "prettier --cache --write .",
    
    "lint": "npm run lint --workspace=frontend",
    "type-check": "npm run type-check --workspaces"
  },
  "prettier": "@sanity/prettier-config",
  "devDependencies": {
    "@sanity/prettier-config": "^2.0.1",
    "npm-run-all2": "^5.0.2",
    "prettier": "^3.6.2"
  }
}